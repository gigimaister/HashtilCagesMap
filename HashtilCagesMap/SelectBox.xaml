<Window x:Class="HashtilCagesMap.SelectBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashtilCagesMap"
        mc:Ignorable="d"
        Title="אזהרה" Height="200" Width="300" Icon="Picture/warning.png" WindowStartupLocation="CenterScreen">
    <Border Margin="5,5,5,10">
        <StackPanel>
            <TextBlock x:Name="tb" Text="" HorizontalAlignment="Center"  FlowDirection="RightToLeft" Margin="0,20,0,0" FontWeight="Bold" FontSize="14" >

            </TextBlock >
            <Grid Margin="0,25,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="ביטול" IsCancel="True" Grid.Column="0" Height="20" Width="60" HorizontalAlignment="Left" Margin="15,0,0,0" Background="#FFEE8A8A" Click="btnCANCEL"/>
                <Button Content="אישור" Grid.Column="1" Height="20" Width="60" HorizontalAlignment="Right" Margin="0,0,15,0" Background="#FF79D439" Click="btnOK"/>

            </Grid>
        </StackPanel>
    </Border>
</Window>
